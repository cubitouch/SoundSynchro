@{
    ViewBag.Title = "Settings";
}

<h2>Settings</h2>
<hr />
@using (Html.BeginForm("SettingsManagementUpdate", "Home", FormMethod.Post, new { @class = "form", enctype = "multipart/form-data" }))
{
    <label>
        Password protected
        <input type="text" name="password" id="password" value="@SoundSynchro.Web.Security.AuthorizationManager.GetPassword()" />
    </label>

    <input type="submit" value="Update" class="button" />
}
<hr />
@using (Html.BeginForm("APIKeyManagementUpdate", "Home", FormMethod.Post, new { @class = "form", enctype = "multipart/form-data" }))
{
    <label>
        Deezer API Key
        <input type="text" name="deezerKey" id="deezerKey" value="@SoundSynchro.Web.APIKeyManager.GetValue(SoundSynchro.MediaType.Deezer)" />
    </label>

    <input type="submit" value="Update" class="button" />
}
